generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id               Int             @id @default(autoincrement())
  telegramId      String          @unique  // ID пользователя в Телеграм
  username         String?         // Имя пользователя (опционально)
  photoUrl         String?         // URL фотографии профиля
  registrationCompleted Boolean      @default(false) // Завершена ли регистрация
  contests         ContestParticipation[] // Связь с участием в конкурсах

  role             Role            // Роль пользователя

  // Можно добавить дополнительные поля
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContestParticipation {
  id               Int              @id @default(autoincrement())

  userId          Int              // ID пользователя, который участвует в конкурсе
  user            User             @relation(fields: [userId], references: [id])

  contestId       Int              // ID конкурса, в котором участвует пользователь
  contest         Contest          @relation(fields: [contestId], references: [id])

  status          ContestStatus    // Статус участия (выиграл, не выиграл, в процессе)
  photoUrl        String?          // URL фото пользователя для конкурса
  votes           Int              @default(0) // Количество голосов

  @@unique([userId, contestId]) // Уникальное сочетание пользователь-конкурс
}

model Contest {
  id               Int              @id @default(autoincrement())
  title            String           // Название конкурса
  startTime        DateTime         // Время начала конкурса
  endTime          DateTime         // Время окончания конкурса
  participations   ContestParticipation[] // Участники конкурса
}

enum ContestStatus {
  WINNER
  NOT_WINNER
  IN_PROGRESS
}

enum Role {
  USER
  ADMIN
}